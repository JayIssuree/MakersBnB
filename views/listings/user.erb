<form action=/listings/new>
    <input type=submit value="Add Listing">
</form>

<div>
    <table>
        <tr>
            <th> Name </th>
            <th> Description </th>
            <th> PPN </th>
            <th> Start Date </th>
            <th> End Date </th>
        </tr>
        <% @user_listings.each do |listing| %>
            </tr>
            <td> <%= listing.name %> </td>
                <td> <%= listing.description %> </td>
                <td> Â£:<%= listing.ppn %> </td>
                <td> <%= listing.start_date %> </td>
                <td> <%= listing.end_date %> </td>
            </tr>
        <% end %>
    </table>
</div>

<div>
    <table>
        <tr>
            <th> Listing </th>
            <th> Date </th>
            <th> User </th>
            <th> Status </th>
        </tr>
        <% @requests.each do |request| %>
            </tr>
                <td> <%= request.booking.listing.name %> </td>
                <td> <%= request.booking.date.strftime('%Y-%m-%d') %> </td>
                <td> <%= User.find(request.user_id).username %> </td>
                <td>
                    <form action=/approve/request method=post>
                        <input type=hidden name=request_id value=<%= request.id %>>
                        <input type=submit value=Approve>
                    </form>
                </td>
            </tr>
        <% end %>
    </table>
</div>